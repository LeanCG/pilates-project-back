<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Rutina</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/edit_routine.css">
</head>

<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header text-white bg-lavender">
                <h3 class="card-title">Editar Rutina</h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="routineName" class="form-label">Nombre de la Rutina</label>
                    <input type="text" class="form-control" id="routineName" value="<%= routine.descripcion %>"
                        disabled>
                </div>

                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Ejercicio</th>
                            <th>Series</th>
                            <th>Repeticiones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% routine.ejercicios.forEach(function(ejercicio, index) { %>
                        <tr>
                            <td>
                                <input type="text" class="form-control" id="exercise-<%= index %>"
                                    value="<%= ejercicio.descripcion %>" disabled>
                            </td>
                            <td>
                                <input type="number" class="form-control" id="series-<%= index %>"
                                    value="<%= ejercicio.series %>" disabled>
                            </td>
                            <td>
                                <input type="number" class="form-control" id="repeticiones-<%= index %>"
                                    value="<%= ejercicio.repeticiones %>" disabled>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary" id="edit-<%= index %>" onclick="enableEdit(<%= index %>)">Editar</button>
                                <button class="btn btn-sm btn-success" id="save-<%= index %>" style="display: none;" onclick="saveChanges(<%= index %>)">Guardar</button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>

                <div class="d-flex justify-content-end">
                    <a href="/routines" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS y tu archivo JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="/js/edit_routine.js"></script>
</body>

</html>
