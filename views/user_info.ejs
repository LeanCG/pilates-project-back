<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Información de Usuario</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/user_info.css">
  </head>
  <body>
    <div class="card p-4">
      <!-- Título con el nombre del usuario -->
      <h1 class="text-center mb-4" id="userName">Información de Usuario</h1>
      <form id="userForm"></form>
        <!-- Distribución de los datos en dos columnas -->
        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="mb-2"><strong>Nombre:</strong> <div class="ml-2 d-inline-block"><span id="nombre"></span></div></div>
            <div class="mb-2"><strong>Apellido:</strong> <div class="ml-2 d-inline-block"><span id="apellido"></span></div></div>
            <div class="mb-2"><strong>DNI:</strong> <div class="ml-2 d-inline-block"><span id="dni"></span></div></div>
            <div class="mb-2"><strong>CUIL:</strong> <div class="ml-2 d-inline-block"><span id="cuil"></span></div></div>
            <div class="mb-2"><strong>Username:</strong> <div class="ml-2 d-inline-block"><span id="username"></span></div></div>
            <div class="mb-2"><strong>Tipo de Persona:</strong> <div class="ml-2 d-inline-block"><span id="tipoPersona"></span></div></div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="mb-2"><strong>Dirección:</strong> <div class="ml-2 d-inline-block"><span id="direccion"></span></div></div>
            <div class="mb-2"><strong>Municipio:</strong> <div class="ml-2 d-inline-block"><span id="municipio"></span></div></div>
            <div class="mb-2"><strong>Departamento:</strong> <div class="ml-2 d-inline-block"><span id="departamento"></span></div></div>
            <div class="mb-2"><strong>Provincia:</strong> <div class="ml-2 d-inline-block"><span id="provincia"></span></div></div>
            <div class="mb-2"><strong>País:</strong> <div class="ml-2 d-inline-block"><span id="pais"></span></div></div>
            <div class="mb-2"><strong>Rol:</strong> <div class="ml-2 d-inline-block"><span id="rol"></span></div></div>
          </div>
        </div>

        <!-- Información adicional -->
        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="mb-2"><strong>Fecha de Creación:</strong> <div class="ml-2 d-inline-block"><span id="createdAt"></span></div></div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="mb-2"><strong>Última Actualización:</strong> <div class="ml-2 d-inline-block"><span id="updatedAt"></span></div></div>
            <div class="mb-2"><strong>Estado:</strong> <div class="ml-2 d-inline-block"><span id="estado"></span></div></div>
          </div>
        </div>

        <!-- Botones de interacción -->
        <div class="text-center mt-4">
          <div class="row">
            <!-- Botón de Guardar a la izquierda -->
            <div class="col text-left">
              <button class="btn btn-custom" id="guardarCambios" style="display: none;" type="submit">Guardar</button>
            </div>

            <!-- Botones de Editar y Volver centrados -->
            <div class="col text-center">
              <button class="btn btn-custom" id="editarInfoUser">Editar Información</button>
              <button class="btn btn-custom my-2" onclick="volverAlInicio()">Volver al Inicio</button>
            </div>

            <!-- Botón de Cancelar a la derecha -->
            <div class="col text-right">
              <button class="btn btn-custom mx-5" id="cancelarEdicion" style="display: none;" type="button">Cancelar</button>
            </div>
          </div>
        </div>
      </div>
    </form>

    <!-- El script que insertará los datos (info_user.js) -->
    <script src="/js/user_info.js"></script>
    <script>
      function volverAlInicio() {
        window.location.href = '/home'; // Redirige a la página de inicio
      }
    </script>
  </body>
</html>
